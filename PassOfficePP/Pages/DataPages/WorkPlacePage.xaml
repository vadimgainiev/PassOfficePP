<Page x:Class="PassOfficePP.Pages.DataPages.WorkPlacePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PassOfficePP.Pages.DataPages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Места работы"
      IsVisibleChanged="WorkPlacePage_OnIsVisibleChanged">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="9.5*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>

        <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                  x:Name="WorkPlaceDataGrid"
                  Grid.Row="0"
                  Grid.Column="0"
                  Margin="5"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name_WorkPlace}"
                                    Header="Наименование"
                                    Width="*" />
                <DataGridTemplateColumn MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BtnEdit"
                                    Content="Изменить"
                                    Style="{StaticResource DataGridFunctionButton}"
                                    Click="BtnEdit_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>

                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <Button Content="Добавить"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Left"
                x:Name="BtnAdd"
                Style="{StaticResource DataFunctionButton}"
                Click="BtnAdd_OnClick" />
        <Button Content="Удалить"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Right"
                x:Name="BtnDelete"
                Style="{StaticResource DataFunctionButton}"
                Background="Crimson"
                Foreground="White"
                Click="BtnDelete_OnClick" />
    </Grid>
</Page>