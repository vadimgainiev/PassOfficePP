<Window x:Class="PassOfficePP.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PassOfficePP"
        mc:Ignorable="d"
        Background="Bisque"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Авторизация" Height="265" Width="350">
    <StackPanel Margin="20">
        <TextBlock Style="{StaticResource HintTextBlock}"
                   Text="Введите логин:" />
        <TextBox x:Name="LoginTb"
                 Style="{StaticResource LoginTextBox}" />
        <TextBlock Style="{StaticResource HintTextBlock}"
                   Text="Введите пароль:" />
        <PasswordBox x:Name="PassPb"
                     Style="{StaticResource PassPasswordBox}" />
        <Button x:Name="LoginBtn"
                Content="Войти"
                Margin="0,20,0,0"
                Style="{StaticResource DataFunctionButton2}"
                Click="LoginBtn_OnClick" />
    </StackPanel>
</Window>